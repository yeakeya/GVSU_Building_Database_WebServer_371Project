<!-- View Edits Page -->

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Edits</title>

        <link rel="stylesheet" href="/styles/gvsu-building-general.css">
    </head>

    <body class="pageContainer">
        <div class="headerContainer">
            <header>Edits</header>
            <div class="dropdown">
                <img id="usr" src="/public/user.png" alt="User Profile">
                <div id="dropdownContent" class="hide">
                    <p><%= username %></p>
                    <button type="button" onclick="logout()">Log Out</button>
                </div>
            </div>
        </div>

        <div class="editContainer">
            <% edits.forEach((edit) => { %>
	    <button id="<%= edit.username %>" type="button" onclick="editRedirect('<%= edit.name %>/edit')"><%= edit.username %> - <%= edit.name %></button>
                <% if (edit.likes.includes(username)) { %>
                    <img class="clickedLike" src="/public/full-like.png" alt="Clicked Like Button">
                <% } else { %>
                    <img class="unclickedLike" id="<%= edit.username %>" src="/public/empty-like.png" alt="Unclicked Like Button">
                <% } %>
            <% }) %>
        </div>

	<script type="text/javascript" src="/scripts/edit-interact.js"></script>
        <script type="text/javascript" src="/scripts/logout.js"></script>
    </body>
</html>
